@model OGameLike.Models.UniversViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Création de l'univers</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <div class="col-md-10">
            Nombre de systèmes solaires :
            @Html.EditorFor(model => model.NombreSystemesSolaires, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            Nombre de planètes par systèmes :
            @Html.EditorFor(model => model.NombrePlanetesParSystemes, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        
        <div class="col-md-10">
            Types de ressources des planètes :
        </div>
        <div class="col-md-10">
            @Html.ListBoxFor(model => model.RessourcesSelectionnees, Model.RessourcesDisponibles, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            Bâtiments disponibles par planètes :
        </div>
        <div class="col-md-10">
            @Html.ListBoxFor(model => model.BatimentsSelectionnes, Model.BatimentsDisponibles, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Configurer le jeu" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Revenir à la page d'administration", "Home")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
